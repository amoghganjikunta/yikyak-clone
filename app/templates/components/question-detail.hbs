<div class="col s12 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title">{{message.title}}</span>
      <h6>Author: {{message.author}}</h6>
      <hr>
      <p>{{message.body}}</p>

    </div>
    <div class="card-action">
      <a href="#">Send User Message</a>

      <hr>
      {{update-question message=message update="update"}}
      <button class="btn" {{action 'delete' message}}>Delete message</button>
      <button class="btn" {{action 'update' message}}>Edit message</button>
    </div>
  </div>
</div>

<ul>
  {{#each message.replies as |reply|}}
    {{reply-tile reply=reply}}
  {{/each}}
</ul>
