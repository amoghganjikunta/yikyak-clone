<div class="row">
  <div class="col s12 m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">{{message.title}}</span>
        <h6>Author: {{message.author}}</h6>
        <hr>
        <p>{{message.body}}</p>
      </div>
      <div class="card-action">
        {{update-question message=message update="update"}}
        <button class="btn" id="delete-button"{{action 'delete' message}}>Delete message</button>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <h5>Replies</h5>
  <hr>
  <ul>
    {{#each message.replies as |reply|}}
    {{reply-tile reply=reply}}
    {{/each}}
  </ul>
</div>
